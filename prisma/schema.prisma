// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  SUPPLIER
  BUSINESS
}

enum InvoiceStatus {
  PENDING
  PARTIAL
  COMPLETED
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          UserRole?
  apiKey        String?   @unique
  accounts      Account[]
  sessions      Session[]

  // Invoices uploaded by supplier
  uploadedInvoices Invoice[] @relation("UploadedInvoices")

  // Invoices assigned to business (as recipient)
  receivedInvoices Invoice[] @relation("ReceivedInvoices")

  // Payments recorded by supplier (what supplier paid on behalf)
  payments Payment[]

  // Settlements made by business (paying back supplier)
  settlements Settlement[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Invoice {
  id            String        @id @default(cuid())
  invoiceNumber String?
  invoiceDate   DateTime?
  recipientName String?
  totalAmount   Float
  paidAmount    Float         @default(0)  // Amount settled by business
  status        InvoiceStatus @default(PENDING)
  fileUrl       String
  fileName      String

  // OCR extracted data (raw JSON for reference)
  ocrData Json?

  // Relationships
  uploaderId String
  uploader   User   @relation("UploadedInvoices", fields: [uploaderId], references: [id])

  recipientId String?
  recipient   User?   @relation("ReceivedInvoices", fields: [recipientId], references: [id])

  // Supplier's payments (what was paid on behalf)
  payments Payment[]

  // Business's settlements (paying back supplier)
  settlements Settlement[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([uploaderId])
  @@index([recipientId])
  @@index([status])
}

model Payment {
  id        String   @id @default(cuid())
  amount    Float
  date      DateTime @default(now())
  slipUrl   String?
  slipName  String?
  notes     String?

  // Invoice is now optional - payments can be created first, invoice attached later
  invoiceId String?
  invoice   Invoice? @relation(fields: [invoiceId], references: [id], onDelete: SetNull)

  // Who created/recorded this payment (Supplier)
  paidById String
  paidBy   User   @relation(fields: [paidById], references: [id])

  // Direct settlements on this payment (when no invoice attached)
  settlements Settlement[]

  // Settlement tracking for payments without invoice
  settledAmount Float @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([invoiceId])
  @@index([paidById])
}

// Settlement = Business paying back the supplier
model Settlement {
  id            String   @id @default(cuid())
  amount        Float
  date          DateTime @default(now())
  slipUrl       String?  // Payment slip uploaded by business
  slipName      String?
  notes         String?
  transactionId String?  @unique // OCR extracted, used to prevent duplicates

  // Settlement can be linked to either an invoice OR a payment directly
  invoiceId String?
  invoice   Invoice? @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  paymentId String?
  payment   Payment? @relation(fields: [paymentId], references: [id], onDelete: Cascade)

  // Who made the settlement (Business user)
  settledById String
  settledBy   User   @relation(fields: [settledById], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([invoiceId])
  @@index([paymentId])
  @@index([settledById])
}
